/* pages/mineChild/coinsBill/coinsBill.wxss */
.container {
  background: rgb(240, 240, 240)
}

.head {
  height: 220rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.headTitle {
  color: #333;
  font-size: 30rpx;
}
.headCoins{
  margin-top: 20rpx;
  color: #ee7c55;
  font-size: 30rpx;
}
.rowContent {
  position: relative;
  height: 112rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: white;
}
.rowLeft {
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.rowTitle {
  color: #333;
  font-size: 28rpx;
}
.rowTime {
  color: #999;
  font-size: 24rpx;
  margin-top: 20rpx;
}
.rowRight {
  position: absolute;
  right: 40rpx;
  color: #ee7c55;
  font-size: 30rpx;
}
.line {
  background: rgb(220, 220, 220);
  height: 2rpx;
}